{
  "name": "ffux",
  "version": "0.3.0",
  "description": "Yet another alternative flux implementation",
  "author": "Matti Lankinen <m.lankinen@iki.fi>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:milankinen/ffux.git"
  },
  "keywords": [
    "flux",
    "react",
    "functional programming",
    "immutable",
    "pure"
  ],
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel/register --recursive test/*",
    "test-with-coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- --compilers js:babel/register --recursive test/*",
    "prepublish": "npm run dist",
    "dist": "mkdir -p dist && babel lib --source-maps inline --modules umd --out-dir dist",
    "counter-example": "browserify examples/counter.js -t babelify > example-bundle.js && open examples/index.html",
    "todos-example": "browserify examples/todos.js -t babelify > example-bundle.js && open examples/index.html"
  },
  "devDependencies": {
    "babel": "5.6.14",
    "babelify": "6.1.2",
    "baconjs": "0.7.65",
    "browserify": "10.2.4",
    "chai": "3.0.0",
    "codecov.io": "0.1.4",
    "istanbul": "0.3.16",
    "mocha": "2.2.5",
    "react": "0.13.3"
  }
}
